---
import SectionHeading from '~/components/typographys/SectionHeading.astro'
import BlogTitleCard from '~/components/cards/BlogTitleCard.astro';
import MoreButton from '~/components/buttons/MoreButton.astro';
import type { Blog } from '~/types/blog'

interface Props {
  blogs: Blog[];
}

const { blogs } = Astro.props;
---

<section id="blog" class="latest-blog">
  <SectionHeading>Blog</SectionHeading>
  <div class="blog-list">
    {blogs.map((blog) => (
      <BlogTitleCard blog={blog} />
    ))}
  </div>
  <MoreButton link="/blog" />
</section>

<style lang="scss" scoped>
.latest-blog {
  width: 100%;
  margin: 80px 0;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 8px;

  .blog-list {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 12px;
  }
}
</style>
