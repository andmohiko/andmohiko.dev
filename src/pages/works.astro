---
import WorksLayout from "~/layouts/WorksLayout.astro";
import WorkCard from "~/components/cards/WorkCard/index.astro";
import { getAllWorks } from "~/lib/microcms"

const works = await getAllWorks();
---

<WorksLayout>
	<div class="works-container">
		<h1 class="title">WORKS</h1>
		<div class="works-list">
			{works.map((work) => (
				<WorkCard work={work} />
			))}
		</div>
	</div>
</WorksLayout>

<style scoped lang="scss">
.works-container {
	min-height: calc(100vh - 80px);
	width: 100%;
	padding: 120px 0 32px;

	display: flex;
	flex-direction: column;
	align-items: center;

	.title {
		font-weight: bold;
		font-size: 2.2rem;
		margin: 1.5rem 0 4rem 0;
		text-shadow: 0 2px 5px rgba(255, 255, 255, 0.1);
	}


	.works-list {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: flex-start;
		gap: 64px;
	}

	.open-dialog {
		background-color: transparent;
		border: none;
		color: inherit;
		cursor: pointer;
		outline: none;
		padding: 0;
		appearance: none;
	}
}
</style>
