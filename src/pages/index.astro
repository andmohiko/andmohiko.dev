---
import DefaultLayout from "~/layouts/DefaultLayout.astro";
import TopHero from "~/components/sections/TopHero.astro";
import AboutSection from "~/components/sections/AboutSection.astro";
import BlogList from "~/components/tables/BlogList.astro";
import LatestWorks from "~/components/sections/LatestWorks.astro";

import { getBlogLatestPosts } from "~/lib/contentful";

const posts = await getBlogLatestPosts();
---

<DefaultLayout>
	<TopHero />
	<AboutSection />
	<LatestWorks />
	<BlogList posts={posts} />
</DefaultLayout>
